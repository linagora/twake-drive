{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "useUnknownInCatchVariables": false,
        "typeRoots": [
            "./typings",
            "./node_modules/@types/"
        ],
        "noImplicitAny": false
    },
    "include": ["src"]
}
  